<body class="hold-transition login-page" onload="Error();">

      
    <div class="modal modal-danger ; modal fade" id="mymodal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Restricted Content</h4>
                </div>
                <div class="modal-body">
                    <p>You do not have access to this content&hellip;</p>
                </div>
                <div class="modal-footer">
                    
                    <button type="button" class="btn btn-outline" data-dismiss="modal" onclick="Redirect();">Okay</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
     
 


    

 

    <footer style="position:absolute ; top:600px ; left:580px ">

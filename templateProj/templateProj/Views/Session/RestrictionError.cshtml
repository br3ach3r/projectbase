    <style>

    .modal-backdrop{
        background-color:ghostwhite;
    }
}

    </style>

    <script>

        function Error()
        {
            $('#mymodal').modal({
                show: 'show'
            });
          
        }
 
        function Redirect() {
            window.location.href = '@Url.Action("Home","Home")';
        }
    </script>



